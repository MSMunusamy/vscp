[Unit]
Description=vscpd MQTT v3.1/v3.1.1 Broker
Documentation=man:vscpd.conf(5) man:vscpd(8)
After=network-online.target
Wants=network-online.target

[Service]
Type=notify
NotifyAccess=main
ExecStart=/usr/sbin/vscpd -c /etc/vscpd/vscpd.conf
ExecReload=/bin/kill -HUP $MAINPID
Restart=on-failure

[Install]
WantedBy=multi-user.target
