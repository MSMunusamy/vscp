install-system: install-folders install-startup-script install-config install-sample-data install-sample-cert install-manpages

install-folders:
	@echo "- Creating folders."
	@mkdir -p $(DESTDIR)/@VSCPDIR@
	@mkdir -p $(DESTDIR)/@VSCPDIR@/logs
	@mkdir -p $(DESTDIR)/@VSCPDIR@/actions
	@mkdir -p $(DESTDIR)/@VSCPDIR@/scripts
	@mkdir -p $(DESTDIR)/@VSCPDIR@/scripts/javascript
	@mkdir -p $(DESTDIR)/@VSCPDIR@/scripts/lua
	@mkdir -p $(DESTDIR)/@VSCPDIR@/ux
	@mkdir -p $(DESTDIR)/@VSCPDIR@/web
	@mkdir -p $(DESTDIR)/@VSCPDIR@/certs
	@mkdir -p $(DESTDIR)/@VSCPDIR@/drivers
	@mkdir -p $(DESTDIR)/@VSCPDIR@/drivers/level1
	@mkdir -p $(DESTDIR)/@VSCPDIR@/drivers/level2
	@mkdir -p $(DESTDIR)/@VSCPDIR@/drivers/level2
	@mkdir -p $(DESTDIR)/@VSCPDIR@/upload
	@mkdir -p $(DESTDIR)/@VSCPDIR@/web/css
	@mkdir -p $(DESTDIR)/@VSCPDIR@/web/images
	@mkdir -p $(DESTDIR)/@VSCPDIR@/web/lib
	@mkdir -p $(DESTDIR)/@VSCPDIR@/web/testws
	@mkdir -p $(DESTDIR)/@VSCPDIR@/vscp
	@mkdir -p $(DESTDIR)/@VSCPDIR@/tables
	@mkdir -p $(DESTDIR)/@VSCPDIR@/mdf
	@mkdir -p $(DESTDIR)/@VSCPDIR@/tmp

install-startup-script:
	@echo "- Installing startup script."
	@if [ ! -e /etc/init.d/vscpd ]; then\
		$(INSTALL_PROGRAM) -b -m755 ../../../../install_files/unix/vscpd.startup_script_debian /etc/init.d/vscpd;\
	    update-rc.d vscpd defaults;\
	fi

install-config:
	@echo "- Installing main configuration file."
	@mkdir -p /etc/vscp
	@if [ ! -e /etc/vscp/vscpd.conf ]; then\
	    $(INSTALL_PROGRAM) -b -m744 install_files/unix/vscpd $(DESTDIR)/etc/vscp/vscpd.conf;\
	else\
	    $(INSTALL_PROGRAM) -b -m744 install_files/unix/vscpd.conf $(DESTDIR)/etc/vscp/vscpd.conf.`date +'%Y%m%d'`;\
	fi

install-sample-data:
	@echo "- Installing VSCP event database."
	$(INSTALL_PROGRAM) -b -m744 database/vscp_events.sqlite3 @VSCPDIR@/

	@echo "- Installing example variables."
	@if [ ! -e @VSCPDIR@/variables.xml ]; then\
	    $(INSTALL_PROGRAM) -b -m744 install_files/variables/variables.xml $(DESTDIR)@VSCPDIR@/variables.xml;\
	else\
	    $(INSTALL_PROGRAM) -b -m744 install_files/variables/variables.xml $(DESTDIR)@VSCPDIR@/variables.xml.`date +'%Y%m%d'`;\
	fi

	@echo "- Installing example DM."
	@if [ ! -e @VSCPDIR@/dm.xml ]; then\
	    $(INSTALL_PROGRAM) -b -m744 install_files/DM/dm.xml $(DESTDIR)@VSCPDIR@/dm.xml;\
 	else\
 	    $(INSTALL_PROGRAM) -b -m744 install_files/DM/dm.xml $(DESTDIR)@VSCPDIR@/dm.xml.`date +'%Y%m%d'`;\
 	fi

	@echo "- Installing sample data for simulation."
	@if [ ! -e @VSCPDIR@/simtempdata.txt ]; then\
	    $(INSTALL_PROGRAM) -b -m744 install_files/simulation/simtempdata.txt $(DESTDIR)@VSCPDIR@/simtempdata.txt;\
 	else\
 	    $(INSTALL_PROGRAM) -b -m744 install_files/simulation/simtempdata.txt $(DESTDIR)@VSCPDIR@/simtempdata.txt.`date +'%Y%m%d'`;\
	fi

install-sample-cert:
	@echo "- Installing server sample certificat."
	@if [ ! -e @VSCPDIR@/certs/server.pem ]; then\
	    $(INSTALL_PROGRAM) -b -m744 install_files/certs/server.pem $(DESTDIR)@VSCPDIR@/certs;\
	fi

	@echo "Installing client sample certificat."
	@if [ ! -e @VSCPDIR@/certs/client.pem ]; then\
	    $(INSTALL_PROGRAM) -b -m744 install_files/certs/client.pem $(DESTDIR/@VSCPDIR@/certs;\
	fi

install-manpages:
	@echo "- Installing man-pages."
	$(INSTALL_PROGRAM) -b -m644 $(DESTDIR)man/vscpd.8 /usr/share/man/man8/
	$(INSTALL_PROGRAM) -b -m644 $(DESTDIR)man/uvscpd.8 /usr/share/man/man8/
	$(INSTALL_PROGRAM) -b -m644 $(DESTDIR)man/vscpworks.1 /usr/share/man/man1/
	$(INSTALL_PROGRAM) -b -m644 $(DESTDIR)man/vscpcmd.1 /usr/share/man/man1/
	$(INSTALL_PROGRAM) -b -m644 $(DESTDIR)man/vscp-mkpasswd.1 /usr/share/man/man1/
	$(INSTALL_PROGRAM) -b -m644 $(DESTDIR)man/vscphelperlib.1 /usr/share/man/man1/
	$(INSTALL_PROGRAM) -b -m644 $(DESTDIR)man/vscpdrivers.7 /usr/share/man/man7/
	mandb

install-web-samples:
	echo "- Installing web-sample pages."
	sh do_web_download @VSCPDIR@

fetch_event_database:
	echo "Fetching VSCP event database"
	rm -f /tmp/vscp_data.sql
	rm -f /tmp/vscp_data.sqlite3
	curl -o/tmp/vscp_data.sql -LOk https://www.vscp.org/events/vscp_events.sql
	cat /tmp/vscp_data.sql | sqlite3 /tmp/vscp_data.sqlite3
	cp /tmp/vscp_data.sql database/
	cp /tmp/vscp_events.sqlite3 database/

delete-all:
	rm -rf @VSCPDIR@/*

clean-conf: delete-all force-conf

deb:
	@for d in $(PROJ_SUBDIRS); do (echo "====================================================" &&\
	echo "Building deb in dir " $$d && echo "====================================================" && cd $$d && $(MAKE) deb ); done

